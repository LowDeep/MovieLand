<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".InscriptionActivity">

    <TextView

        android:layout_marginLeft="10dp"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:text="MovieLand"
        android:layout_marginTop="-40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:textColor="@color/colortitle"
        android:textSize="50dp"
        android:textStyle="italic|bold"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:text="@string/creerCompte"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorBlack"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/textUsername"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrisClair"
        android:hint="@string/nomUtilisateur"
        android:paddingHorizontal="10dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGris"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrisClair"
        android:hint="@string/email"

        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGris"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/textPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrisClair"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGris"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/textValidatePassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrisClair"
        android:hint="@string/valider_password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGris"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bouton_takephoto"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorbeige"
        android:text="@string/takephoto"
        android:textColor="@color/colorBlack"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bouton_showimage"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorbeige"
        android:text="@string/showimage"
        android:textColor="@color/colorBlack"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bouton_enregistrer"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorbuttons"
        android:text="@string/enregistrer"
        android:textColor="@color/colorBlack"
        android:textSize="22dp" />


</LinearLayout>