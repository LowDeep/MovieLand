<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".InscriptionActivity">

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:text="@string/creerCompte"

        android:textColor="@color/colorWhite"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/textUsername"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGris"
        android:hint="@string/nomUtilisateur"
        android:paddingHorizontal="10dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGrisClair"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGris"
        android:hint="@string/email"

        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGrisClair"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/textPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGris"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGrisClair"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/textValidatePassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGris"
        android:hint="@string/valider_password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorGrisClair"
        android:textSize="22dp" />

    <Button
        android:id="@+id/bouton_enregistrer"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorRose"
        android:text="@string/enregistrer"
        android:textColor="@color/colorWhite"
        android:textSize="22dp" />


</LinearLayout>