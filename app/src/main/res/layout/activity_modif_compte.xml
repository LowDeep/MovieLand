<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:orientation="vertical"
    tools:context=".DataBase.ModifCompteActivity">>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:text="Modifier mon compte !"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/PseudoM"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGris"
            android:hint="username"
            android:paddingHorizontal="10dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorGrisClair"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/EmailM"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGris"
            android:hint="Email"

            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorGrisClair"
            android:textSize="22dp" />


        <EditText
            android:id="@+id/PasswordM"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGris"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorGrisClair"
            android:textSize="22dp" />

        <Button
            android:id="@+id/EnregistrerM"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorRose"
            android:text="Enregistrer les modifications"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />


    </LinearLayout>