<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageAcceuilModeConnecte"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/ajout_film_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajout_film_bouton"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@android:dimen/thumbnail_width"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liste_films_ajoute"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_list_films"
            android:layout_margin="10dp"
        />

    </LinearLayout>

</LinearLayout>