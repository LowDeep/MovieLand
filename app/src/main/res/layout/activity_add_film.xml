<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <!-- ZONE TITRE DU FILM -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titre_du_film_ADD"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addFilm_titre"/>

        <!-- ZONE DE GENRE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genre_ADD"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFilm_genre"
            android:inputType="text"/>

        <!-- ZONE DE LANNEE DE SORTIE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annee_de_sortie_ADD"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFilm_annee"
            android:inputType="number"/>




        <!-- ZONE ACTEURS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acteurs_ADD"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addFilm_addActeur"
                android:text="+"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addFilm_addActeurLayout"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addFilm_acteur1"
                android:layout_margin="8dp"/>
        </LinearLayout>
        <!--ZONE DU RESUME -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resume_ADD"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="8"
            android:id="@+id/addDVD_resume"
            android:inputType="textCapSentences|textMultiLine"/>

        <!-- ZONE DU BOUTON OK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation ="horizontal"
            android:gravity ="right">
            <Button
                android:id="@+id/addDVD_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ajouter"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>