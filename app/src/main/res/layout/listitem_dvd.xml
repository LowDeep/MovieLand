<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:id="@+id/image_item"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemDVD_titre"
        android:text="Main Title"
        android:maxLines="1"
        android:layout_margin="5dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemDVD_annee"
        android:text="Year movie"
        android:textColor="#a9a9a9"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textSize="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listItemDVD_genre"
            android:text="genre movie"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="10sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listItemDVD_resume"
        android:text="resume movie"
        android:textColor="#a9a9a9"
        android:textStyle="bold|italic"
        android:layout_margin="5dp"
        android:textSize="10sp"
        android:maxLines="3"
        android:ellipsize="end"/>
    </LinearLayout>


</LinearLayout>