<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorback">

    <TextView

        android:layout_marginLeft="10dp"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:text="MovieLand"
        android:layout_marginTop="-150dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/colortitle"
        android:textSize="50dp"
        android:textStyle="italic|bold"/>

    <TextView
        android:id="@+id/titreFilm"

        android:text="Titre du film"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="100dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="30dp" />

    <TextView

        android:text="Année de sortie"
        android:id="@+id/anneeFilm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorGris"
        android:textSize="22dp" />

    <TextView

        android:text="Genre"
        android:id="@+id/genreFilm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorGris"
        android:textSize="22dp" />

    <TextView

        android:text="Acteurs"
        android:id="@+id/acteursFilm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorGris"
        android:textSize="22dp" />


    <TextView

        android:text="Résumé"
        android:minLines="5"
        android:maxLines="20"
        android:id="@+id/resumeFilm"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorGris"
        android:textSize="22dp" />

    <Button
        android:id="@+id/Infos"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/titreFilm"

        android:layout_toRightOf="@id/genreFilm"
        android:background="@color/colorbuttons"
        android:text="@string/infos"
        android:textColor="@color/colorBlack"

        android:textSize="18dp" />



</LinearLayout>