<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorback"
        android:gravity="center"
        android:orientation="vertical"
    tools:context=".ModifCompteActivity">


        <TextView

            android:layout_marginLeft="10dp"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:text="MovieLand"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colortitle"
            android:textSize="50dp"
            android:textStyle="italic|bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/modifier_mes_informations"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/EmailM"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorGrisClair"
            android:hint="Email"

            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorGris"
            android:textSize="18dp" />
        <EditText
            android:id="@+id/PasswordAncien"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGrisClair"
            android:hint="@string/ancienmdp"

            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorGris"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/PasswordM"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGrisClair"
            android:hint="@string/modifmdp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/colorGris"
            android:textSize="18dp"

            />

        <Button
            android:id="@+id/EnregistrerM"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorbuttons"
            android:text="@string/enregistremodif"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"

          />


    </LinearLayout>