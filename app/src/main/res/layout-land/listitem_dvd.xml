<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorback"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >


    <TextView

        android:id="@+id/listItemDVD_titre"
        android:text="@string/titre_du_film"
        android:maxLines="1"
        android:layout_marginTop="0dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="25dp" />
    <TextView

        android:id="@+id/listItemDVD_annee"
        android:text="@string/annee_de_sortie"

        android:textStyle="bold"
        android:layout_margin="5dp"

        android:layout_width="250dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"

        android:layout_marginTop="30dp"
        android:textColor="@color/colorGris"
        android:textSize="22dp"/>
        <TextView

            android:id="@+id/listItemDVD_genre"
            android:text="@string/genre"

            android:textStyle="bold"
            android:layout_margin="5dp"

            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"

            android:layout_marginTop="30dp"
            android:textColor="@color/colorGris"
            android:textSize="22dp"
            />
        <TextView

            android:id="@+id/listItemDVD_acteurs"
            android:text="@string/acteurs"

            android:textStyle="bold"
            android:layout_margin="5dp"

            android:layout_width="250dp"
            android:layout_height="50dp"
            android:paddingLeft="10dp"

            android:layout_marginTop="30dp"
            android:textColor="@color/colorGris"
            android:textSize="22dp"
            />
    <TextView

        android:id="@+id/listItemDVD_resume"
        android:text="@string/resume"

        android:maxLines="3"
        android:ellipsize="end"

        android:textStyle="bold"
        android:layout_margin="5dp"

        android:layout_width="400dp"
        android:layout_height="80dp"
        android:paddingLeft="10dp"

        android:layout_marginTop="30dp"
        android:textColor="@color/colorGris"
        android:textSize="22dp"/>
    </LinearLayout>


</LinearLayout>